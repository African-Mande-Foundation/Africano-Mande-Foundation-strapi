{
  "kind": "collectionType",
  "collectionName": "volunteer_application_forms",
  "info": {
    "singularName": "volunteer-application-form",
    "pluralName": "volunteer-application-forms",
    "displayName": "Volunteer-Application-Form"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "ApplicationStatus": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Approved",
        "Rejected",
        "Resubmit"
      ]
    },
    "CV": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "IdentityCard": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "MotivationLetter": {
      "type": "text"
    },
    "applicant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "ApplicationForm"
    },
    "reviewed_by": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "admin_note": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::admin-note.admin-note",
      "mappedBy": "volunteer_application_form"
    }
  }
}
